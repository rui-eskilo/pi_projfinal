<% include ./../_layouts/top %>
<% include ./top_of_dashboard %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="box">
                <hr>
                <h2 class="intro-text text-center">
                    My <strong>Queixinhas</strong>
                </h2>
                <hr>
            </div>
        </div>
    </div>
</div>


<% myqueixinhas.forEach(function(queixinha) { %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
        		<div class="col-lg-12">
                <% if(queixinha.state) {%>
        			<div class="col-lg-5">
                    	<i class="fa fa-keyboard-o"></i>
                    	<a href="/queixinhas/<%=queixinha.id%>"><%= queixinha.title %></a>
                	</div>
                	<div class="col-lg-2">
                        <form style='display:inline' id="lock<%=queixinha.id%>" action="/queixinhas/lock" method="POST">
                                <input type="hidden" name="dbuser" value="<%=user.id%>">
                                <input type="hidden" name="queixinha" value="<%=queixinha.id%>">
                                <a href="#" onclick="document.getElementById('lock<%=queixinha.id%>').submit()"><i class="fa fa-lock"></i> Fechar Queixinha</a>
                        </form>
                    </div>
                <% }else {%>
                	<div class="col-lg-5">
                    	<i class="fa fa-key"></i>
                    	<a href="/queixinhas/<%=queixinha.id%>"><%= queixinha.title %></a>
                    </div>
                    <div class="col-lg-2">
                        <form style='display:inline' id="unlock<%=queixinha.id%>" action="/queixinhas/unlock" method="POST">    
                            <input type="hidden" name="dbuser" value="<%=user.id%>">
                            <input type="hidden" name="queixinha" value="<%=queixinha.id%>">
                            <a href="#" onclick="document.getElementById('unlock<%=queixinha.id%>').submit()"><i class="fa fa-unlock"></i> Activar Queixinha</a>
                        </form>
                    </div>
                <% }%>
                    <div class="col-lg-2">
                        <a href="/queixinhas/edit?queixinha=<%=queixinha.id%>"><i class="fa fa-pencil"></i> Editar</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<% }) %>


<% include ./../_layouts/footer %>