<% include ./../_layouts/top %>
<% include ./top_of_dashboard %>


	<div class="box" style="color:green">
		<h1>My Queixinhas</h1>
	</div>


<% myqueixinhas.forEach(function(queixinha) { %>


	<div class="box">
		<div class="col-lg-12">
        <% if(queixinha.state) {%>
			<div class="col-lg-7">
            	<i class="fa fa-keyboard-o fa-2x"></i>
            	<a href="/queixinhas/<%=queixinha.id%>"><%= queixinha.title %></a>
        	</div>
        	<div class="col-lg-2">
                <form style='display:inline' id="lock<%=queixinha.id%>" action="/queixinhas/lock" method="POST">
                        <input type="hidden" name="dbuser" value="<%=user.id%>">
                        <input type="hidden" name="queixinha" value="<%=queixinha.id%>">
                        <a href="#" onclick="document.getElementById('lock<%=queixinha.id%>').submit()"><small> lock</small></a>
                </form>
            </div>
        <% }else {%>
        	<div class="col-lg-7">
            	<i class="fa fa-key fa-2x"></i>
            	<a href="/queixinhas/<%=queixinha.id%>"><%= queixinha.title %></a>
            </div>
            <div class="col-lg-2">
                <form style='display:inline' id="unlock<%=queixinha.id%>" action="/queixinhas/unlock" method="POST">
                        <input type="hidden" name="dbuser" value="<%=user.id%>">
                        <input type="hidden" name="queixinha" value="<%=queixinha.id%>">
                        <a href="#" onclick="document.getElementById('unlock<%=queixinha.id%>').submit()"><small> unlock</small></a>
                </form>
            </div>
        <% }%>

        </div>
    </div>

<% }) %>


<% include ./../_layouts/footer %>