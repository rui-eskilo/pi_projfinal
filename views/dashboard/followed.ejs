<% include ./../_layouts/top %>
<% include ./top_of_dashboard %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="box">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Queixinhas Seguidas</strong>
                </h2>
                <hr>
            </div>
        </div>
    </div>
</div>


<% queixinhas.forEach(function(queixinha) { %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
        		<div class="col-lg-12">
        			<div class="col-lg-7">
                		<i class="fa fa-keyboard-o fa-2x"></i>
                		<a href="/queixinhas/<%=queixinha.id%>"><%= queixinha.title %></a>
                	</div>
                	<div class="col-lg-2">
                		<form style='display:inline' id="unfollow<%=queixinha.id%>" action="/queixinhas/unfollow" method="POST">
                                <input type="hidden" name="dbuser" value="<%=user.id%>">
                                <input type="hidden" name="queixinha" value="<%=queixinha.id%>">
                                <a href="#" onclick="document.getElementById('unfollow<%=queixinha.id%>').submit()">Unfollow</a>
                        </form>
                	</div>
            	</div>
            </div>
        </div>
    </div>
</div>

<% }) %>


<% include ./../_layouts/footer %>