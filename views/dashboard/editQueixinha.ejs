<% include ./../_layouts/top %>
<% include ./top_of_dashboard %>

        <div class="box">
            <div class="box-content">
              <hr>
                <h2 class="intro-text text-center">Editar <strong>Queixinha</strong></h2>
              <hr>
              <form class="form-horizontal" method="POST">
              	<input type="hidden" name="id" value="<%=queixinha.id%>">
                <div class="form-group">
                  <label for="title" class="col-sm-2 control-label">Título</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="title" name="title" value="<%=queixinha.title%>">
                  </div>
                </div>
                <div class="form-group">
                  <label for="description" class="col-sm-2 control-label">Descrição</label>
                  <div class="col-sm-10">
                    <textarea class="form-control" name="description"><%=queixinha.description%></textarea>
                  </div>
                </div>
                <div class="form-group">
                  <label for="geoRef" class="col-sm-2 control-label"><i class="fa fa-globe"></i></label>
                  <div class="col-sm-4">
                    <input class="form-control" name="geoRef" value="<%=queixinha.geoRef%>">
                  </div>
                  <label for="geoRef" class="col-sm-2 control-label">Categoria</i></label>
                  <div class="col-sm-4">
                    <select class="form-control" name="categoria">
                      <% for(var i=0; i<categories.length; i++) {%>
                          <option value="<%= categories[i].id %>" <% if(categories[i].name == queixinha.cat){%>selected<%}%>><%= categories[i].name %></option>
                      <% } %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Alterar</button>
                    <button type="button" class="btn btn-default" onclick="window.location='/dashboard/myqueixinhas'">Cancelar</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

<% include ./../_layouts/footer %>