<% include ./../_layouts/top %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <% queixinhas.forEach(function(queixinha) { %>
                    <div class="box">
                        <hr>
                        <h2 class="intro-text text-center">
                        <strong><i class="fa fa-keyboard-o fa"></i></strong><a href="/queixinhas/<%=queixinha.id%>"> <%= queixinha.title %></a>
                    </h2>
                    <hr>
                    <br>
                        <i class="fa fa-male fa"></i><small> <%= queixinha.owner %></small>
                    </div>
                 <% }) %>
            </div>
        </div>    
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="box">
                    <nav>
                        <ul class="pagination">
                            <% for(var i=1; i<=countPages; i++){%>
                                <% if(i==page){%>
                                    <li class="active"><a href="/queixinhas?page=<%=i%>"><%= i %></a></li>
                                <% } else {%>
                                    <li><a href="/queixinhas?page=<%=i%>"><%= i %></a></li>
                                    <% } %>
                            <% }%>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
<% include ./../_layouts/footer %>
